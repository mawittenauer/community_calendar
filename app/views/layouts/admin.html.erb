<!DOCTYPE html>
<html>
  <head>
    <title>Community Calendar Admin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <nav style="padding: 12px; border-bottom: 1px solid #ddd;">
      <strong>Admin</strong> |
      <%= link_to "Events", admin_events_path %> |
      <%= link_to "Categories", admin_categories_path %> |
      <%= link_to "Tags", admin_tags_path %> |
      <%= link_to "Venues", admin_venues_path %> |
      <%= button_to "Logout", destroy_admin_user_session_path, method: :delete, form: { style: "display:inline" } %>
    </nav>

    <main style="padding: 16px;">
      <%= yield %>
    </main>
  </body>
</html>
